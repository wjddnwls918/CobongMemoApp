<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/showContent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >




    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/memo_title"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="input memo title"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/memo_subtitle"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="input sub title"
                android:textSize="13dp"
                />

        </LinearLayout>




        <!-- Memo type icon -->
       <LinearLayout
           android:id="@+id/memo_type"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/text_type"
               android:layout_marginTop="10dp"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/text"
               android:visibility="invisible"
               />

           <ImageView
               android:id="@+id/voice_type"
               android:layout_marginTop="10dp"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/voice"
               android:visibility="invisible"
               />

           <ImageView
               android:id="@+id/handwriting_type"
               android:layout_marginTop="10dp"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/handwriting"
               android:visibility="invisible"
               />


           <TextView
               android:id="@+id/memo_inputTime"
               android:layout_marginTop="0dp"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:gravity="end"
               android:textAlignment="textEnd"
               />

       </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView

            android:id="@+id/edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/edit"/>

        <ImageView
            android:id="@+id/remove"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/remove"/>

    </LinearLayout>



</LinearLayout>