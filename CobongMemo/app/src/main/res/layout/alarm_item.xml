<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/alarm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hint="alarm_time"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/monday"
                    />

                <ImageView
                    android:layout_margin="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/tuesday"
                    />

                <ImageView
                    android:layout_margin="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/wednesday"
                    />

                <ImageView
                    android:layout_margin="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/thursday"
                    />

                <ImageView
                    android:layout_margin="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/friday"
                    />

                <ImageView
                    android:layout_margin="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/saturday"
                    />

                <ImageView
                    android:layout_margin="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sunday"
                    />


            </LinearLayout>



        </LinearLayout>


    <!-- day Check icon -->
    <LinearLayout
        android:id="@+id/set_alarm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"
        >

        <TextView
            android:id="@+id/recurOption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        >

        <Switch
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </LinearLayout>



</LinearLayout>

