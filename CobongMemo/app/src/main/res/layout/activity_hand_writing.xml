<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:layout_margin="10dp"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/handwriteExit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="30dp"
                        android:maxWidth="30dp"
                        android:src="@drawable/icon_close"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:hint="@string/writeMemoTextView"/>
                    <ImageView
                        android:id="@+id/handwriteInsert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="true"
                        android:maxWidth="30dp"
                        android:maxHeight="30dp"
                        android:src="@drawable/icon_ok"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#D3D0D0"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/handwriteTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/writeMemoTitle"
                        android:inputType="text"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#D3D0D0"/>

                <EditText
                    android:id="@+id/handwriteSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/writeMemoSub"
                    android:inputType="text"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#D3D0D0"/>





        <LinearLayout
            android:id="@+id/handwriteLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <me.panavtec.drawableview.DrawableView
                android:id="@+id/paintView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>













            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#D3D0D0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/handwriteColor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/palette2"
                android:layout_margin="5dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >

                <ImageView
                    android:id="@+id/widthUp"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:src="@drawable/up"
                    />

                <ImageView
                    android:id="@+id/widthDown"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:src="@drawable/down"
                    />

            </LinearLayout>



            <ImageView
                android:id="@+id/eraser"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/eraser2"
                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/undo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/undo"
                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/blackPencil"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/blackpencil"
                android:layout_margin="5dp"
                />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>